@model IEnumerable<SchoolWebsite.Models.Poll>

@{
    ViewBag.Title = "Poll History";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create") | @Html.ActionLink("Participate", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumQuestions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumAnswers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.questions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.answers)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumQuestions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumAnswers)
            </td>

            @{  if (item.questions.Length > 9)
              {
                <td>
                    @Html.DisplayFor(modelItem => item.questions).ToString().Substring(0, 10)
                    ...
                </td>
              }
              else
              {
                <td>
                    @Html.DisplayFor(modelItem => item.questions)...
                </td>
              }
            }

            <td>
                @Html.DisplayFor(modelItem => item.answers).ToString().Substring(0, 10) ...
            </td>
            <td>
                @Html.ActionLink("Results", "Results", new { id = item.PollID }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.PollID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PollID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PollID })
            </td>
        </tr>
    }

</table>
